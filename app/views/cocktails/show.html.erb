<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <h1><%= @cocktail.name %></h1>
        <h4>Ingredient</h4>
          <%= simple_form_for [ @cocktail, @dose ] do |f| %>
            <%= f.input :description %>
            <%= f.association :ingredient %>
            <%= f.submit "Submit dose", class: "btn btn-primary" %>
          <% end %>
         <br><br>
        <ul>
          <% @cocktail.doses.each do |dose| %>
            <li><%=  dose.ingredient.name %> <%= link_to dose_path(dose.id),
              method: :delete,
              data: { confirm: 'Are you sure ?'} do %>
                  <i class="fas fa-dumpster-fire"></i>
                <% end %>
            <% end %>
        </ul>


    </div>
  </d iv>
  <%= link_to "Back to cocktails", cocktails_path(@cocktail)%>

</div>
